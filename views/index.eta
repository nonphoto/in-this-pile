<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>In This Pile</title>
    <script type="module">
      import "/socket.io/socket.io.js";
      const socket = io();
      const clicksElement = document.querySelector(`[data-name="clicks"]`);
      const scrollElement = document.querySelector(`[data-name="scroll"]`);
      socket.on("clicks", (clicks) => {
        clicksElement.textContent = clicks;
      });
      socket.on("scroll", (scroll) => {
        scrollElement.textContent = scroll;
      });
    </script>
  </head>
  <body>
    <p data-name="clicks"><%= it.clicks %></p>
    <p data-name="scroll"><%= it.scroll %></p>
  </body>
</html>
